pipeline {
    agent {
        docker {
            image 'docker.internal.kevinlin.info/infra/ci-base:0.1.1'
            label 'docker-executor'
            args '-v $EXECUTOR_SSH_DIR:$CONTAINER_SSH_DIR:ro'
        }
    }

    options {
        withAWS(
            endpointUrl: 'https://storage.kevinlin.info',
            credentials: 'storage-internal',
        )
    }

    stages {
        stage('Environment') {
            steps {
                s3Download(
                    bucket: 'internal',
                    path: 'resources/react-elemental-docs/.env',
                    file: '.env',
                )
            }
        }
        stage('Install') {
            steps {
                sh 'npm-s3 install'
            }
        }
        stage('Test') {
            parallel {
                stage('Lint') {
                    steps {
                        sh 'npm run lint'
                    }
                }
                stage('Unit') {
                    steps {
                        sh 'npm run test'
                    }
                }
            }
        }
        stage('Build') {
            environment {
                NODE_ENV = 'production'
                GIT_SHA = "$GIT_COMMIT"
                REACT_ELEMENTAL_VERSION = sh(
                    script: 'cat package.json | jq -r \'.dependencies[\"react-elemental\"]\'',
                    returnStdout: true
                ).trim()
            }
            steps {
                sh 'npm run build'
            }
        }
        stage('Release') {
            steps {
                sh 'tar -czf release.tar.gz dist/'
                s3Upload(
                    bucket: 'internal',
                    path: "deploy/${env.JOB_NAME}/${env.GIT_COMMIT}/",
                    file: 'release.tar.gz',
                )
            }
        }
        stage('Deploy') {
            steps {
                sh 'mv dist /tmp/react-elemental-docs'
                sh 'git fetch --all'
                sh 'git checkout gh-pages'
                sh 'git reset --hard origin/gh-pages'
                sh 'mv /tmp/react-elemental-docs/index.html index.html'
                sh 'cp index.html 404.html'
                sh 'git add .'
                sh 'git status'
                sh "git commit -m \"[automatic commit] ${GIT_BRANCH}:${GIT_COMMIT}\" || :"
                sh 'git remote add github git@github.com:LINKIWI/react-elemental-docs.git'
                sh 'git push origin HEAD'
                sh 'git push github HEAD'
            }
        }
    }
}
